<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">


        <TextView
            android:id="@+id/labelNbOperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Opérations effectuées :"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/NbOperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="0"
            android:layout_toRightOf="@id/labelNbOperation"
            android:layout_marginVertical="10dp"
            />


        <TextView
            android:id="@+id/labelNbOperationVrais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opérations vraies"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"

            />

        <TextView
            android:id="@+id/NbOperationVrais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_toRightOf="@id/labelNbOperationVrais"
            android:textSize="25dp"
            android:layout_marginVertical="10dp"

            />


        <TextView
            android:id="@+id/labelNbOperationFaux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opérations fausses"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"

            />

        <TextView
            android:id="@+id/NbOperationFaux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_toRightOf="@id/labelNbOperationFaux"
            android:textSize="25dp"
            android:layout_marginVertical="10dp"

            />


    <TextView
        android:id="@+id/BoutionEnvoieSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/num"
        android:layout_margin="15dp"
        android:paddingHorizontal="10dp"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/inputSms"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="phone"
        android:maxLength="10"
        />

    <Button
        android:id="@+id/envoiSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer"
        android:layout_margin="20dp"
        android:background="@drawable/custom_buttons"
        android:textColor="#ffffff"
        />

</LinearLayout>